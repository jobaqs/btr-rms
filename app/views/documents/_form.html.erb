
  <h4>Folder Name : <%= @document.folder.title %></h4>
<h5><%="Original Document : " + @document.parent.subject_matter if @document.parent %><h5>
    <hr>    

<%= form_for @document, :html => { :class => 'form-horizontal' } do |f| %>
  
  
  <%  unless @document.parent%>
  <div class="control-group">
    <%= f.label :document_number, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :document_number, :class => 'text_field' %>
      </div>
  </div>  
  <%end%>
    
  
  <div class="control-group">
    <%= f.label 'Dcoument Type', :class => 'control-label' %>
    <div class="controls">
      <%= f.select :doctype_id, doctype_selection, :class => 'select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :subject_matter, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject_matter, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :due_on, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :due_on, :class => 'date_select' %>
    </div>
  </div>
  <%= hidden_field_tag :assignment_id, @assignment_id %>
  <%= f.hidden_field :assigned_to %>
  <%= f.hidden_field :folder_id %>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :parent_id %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                documents_path, :class => 'btn' %>
  </div>
<% end %>
